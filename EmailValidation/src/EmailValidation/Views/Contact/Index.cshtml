@model EmailValidation.Models.ContactModel

<style>
    body { background-color: #f6f8fc; }
    .compose-card { background: white; border-radius: 8px; box-shadow: 0 1px 2px 0 rgba(60,64,67,0.3), 0 2px 6px 2px rgba(60,64,67,0.15); max-width: 600px; margin: 40px auto; overflow: hidden; }
    .compose-header { background: #404040; color: white; padding: 10px 15px; font-weight: 500; display: flex; justify-content: space-between; align-items: center; }
    .compose-body { padding: 20px; }
    
    /* Clean Inputs */
    .g-input { border: none; border-bottom: 1px solid #e0e0e0; border-radius: 0; padding: 10px 0; width: 100%; outline: none; transition: 0.3s; }
    .g-input:focus { border-bottom: 2px solid #1a73e8; }
    .form-label { font-size: 0.85rem; color: #5f6368; margin-top: 10px; }
    
    /* Gmail Blue Button */
    .btn-g-send { background-color: #1a73e8; color: white; font-weight: 500; border-radius: 4px; padding: 8px 24px; border: none; }
    .btn-g-send:hover { background-color: #155db5; box-shadow: 0 1px 1px 0 rgba(0,0,0,0.14), 0 2px 1px -1px rgba(0,0,0,0.12), 0 1px 3px 0 rgba(0,0,0,0.20); }
</style>

<div class="container">
    <div class="compose-card">
        <div class="compose-header">
            <span>New Message</span>
            <div>
                <span class="material-icons" style="font-size: 18px; cursor: pointer;">minimize</span>
                <span class="material-icons ms-2" style="font-size: 18px; cursor: pointer;">open_in_full</span>
                <span class="material-icons ms-2" style="font-size: 18px; cursor: pointer;">close</span>
            </div>
        </div>
        
        <div class="compose-body">
            <form asp-action="Submit" method="post" novalidate>
                
                <div class="mb-2">
                    <input asp-for="Email" class="g-input" placeholder="To: (Email Address)" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-2">
                    <input asp-for="PhoneNumber" class="g-input" placeholder="Phone Number" />
                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <textarea asp-for="Description" class="g-input" rows="6" placeholder="Subject / Description" style="border-bottom: none; resize: none;"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-3">
                    <button type="submit" class="btn-g-send">Send</button>
                    <div class="text-secondary">
                        <span class="material-icons me-2" style="cursor:pointer">attach_file</span>
                        <span class="material-icons me-2" style="cursor:pointer">link</span>
                        <span class="material-icons me-2" style="cursor:pointer">sentiment_satisfied</span>
                        <span class="material-icons me-2" style="cursor:pointer">delete</span>
                    </div>
                </div>
            </form>

            @if (TempData["Message"] != null)
            {
                <div class="alert @(TempData["Status"] as string == "success" ? "alert-success" : "alert-danger") mt-3 rounded-0 border-0 shadow-sm">
                    @TempData["Message"]
                </div>
            }
        </div>
    </div>
</div>