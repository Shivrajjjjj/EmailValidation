@model EmailValidation.Models.BlockedEmailViewModel

@{
    ViewData["Title"] = "Email Blocked";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow-lg p-4 border-danger">
                <h3 class="text-danger fw-bold text-center mb-4">❌ Email Blocked</h3>

                <table class="table table-bordered">
                    <tr>
                        <th>Email</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th>Domain</th>
                        <td>@Model.Domain</td>
                    </tr>
                    <tr>
                        <th>Host</th>
                        <td>@Model.Host</td>
                    </tr>
                    <tr>
                        <th>IP Address</th>
                        <td>@Model.IPAddress</td>
                    </tr>
                    <tr>
                        <th>Trigger Time</th>
                        <td>@Model.TriggerTime</td>
                    </tr>
                    <tr>
                        <th>Reason</th>
                        <td class="text-danger fw-semibold">@Model.Reason</td>
                    </tr>
                </table>

                <a href="/Contact/Index" class="btn btn-secondary w-100 mt-3">Go Back</a>
            </div>
        </div>
    </div>
</div>
